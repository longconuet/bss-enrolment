@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="position-relative z-index-2">
	<!--begin::Container-->
	<div class="container">
		<!--begin::Card-->
		<div class="card mt-7" id="card-payee" data-kt-scroll-offset="85" style="filter: drop-shadow(0px 0px 40px rgba(68, 81, 96, 0.08))">
			<!--begin::Card body-->
			<div class="card-body">
				<!--begin::Heading-->
				<div class="text-center mb-5 mb-lg-10">
					<!--begin::Title-->
					<h3 class="fs-2hx text-dark mb-5" id="portfolio" data-kt-scroll-offset="{default: 100, lg: 150}">Register</h3>
					<!--end::Title-->
				</div>
				<!--end::Heading-->
				<!--begin::Tabs content-->
				<div class="row">
					<div class="col-md-3"></div>
					<div class="col-md-6" id="email-content">
						<form id="register-email-form">
							<div class="mb-3">
								<label for="email" class="form-label">Email address</label>
								<input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
							</div>
						</form>

						<div class="row">
							<div class="col-md-12" align="center">
								<button id="register-email-submit" type="button" class="btn btn-primary mt-5" onclick="return registerEmail();">Continue</button>
							</div>
						</div>
					</div>
				</div>
				
							
				<!--end::Tabs content-->
			</div>
			<!--end::Card body-->
		</div>
		<!--end::Card-->
					
	</div>
	<!--end::Container-->
</div>

